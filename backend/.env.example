# Development Environment Configuration
# Copy this to .env for local development

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

NODE_ENV=development
APP_ENV=development
APP_NAME=Team Evaluatie App

# =============================================================================
# SECURITY - DEV SETTINGS
# =============================================================================

# JWT Secret Key - Use a random string, even in dev
SECRET_KEY=dev-secret-key-change-me-in-production

# JWT Token Expiration (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Security Headers - Enabled in dev for testing
ENABLE_BACKEND_SECURITY_HEADERS=true

# Dev-login Control - ENABLED for local development
# This allows using X-User-Email header for easy testing
ENABLE_DEV_LOGIN=true

# Cookie Security Settings - Relaxed for local dev
COOKIE_SECURE=false  # Set to true in production with HTTPS
COOKIE_DOMAIN=  # Leave empty for localhost
COOKIE_SAMESITE=Lax
COOKIE_MAX_AGE=604800  # 7 days in seconds

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed frontend origins
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# URLs
# =============================================================================

FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
API_V1_PREFIX=/api/v1

# =============================================================================
# DATABASE
# =============================================================================

# PostgreSQL connection string for local dev
DATABASE_URL=postgresql+psycopg2://app:app@localhost:5432/tea

# =============================================================================
# REDIS (Queue & Rate Limiting)
# =============================================================================

REDIS_URL=redis://localhost:6379/0

# =============================================================================
# AZURE AD (OAuth Authentication) - OPTIONAL IN DEV
# =============================================================================

# Leave empty if not testing Azure AD locally
AZURE_AD_CLIENT_ID=
AZURE_AD_TENANT_ID=
AZURE_AD_CLIENT_SECRET=
AZURE_AD_REDIRECT_URI=http://localhost:8000/api/v1/auth/azure/callback
AZURE_AD_SCOPES=User.Read
AZURE_AD_ALLOWED_DOMAINS=

# =============================================================================
# AI/OLLAMA SETTINGS (Optional)
# =============================================================================

OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1
OLLAMA_TIMEOUT=60.0
